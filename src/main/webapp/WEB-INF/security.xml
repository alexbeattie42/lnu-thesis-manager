	<beans:bean class="org.springframework.security.web.access.expression.DefaultWebSecurityExpressionHandler" />
	
	<!-- to redirect to the right homepage in accordance with user role -->
	<beans:bean id="authSuccessHandler" class="se.lnu.security.config.AuthSuccessHandler"/>
	<!-- enable use-expressions -->
	<http auto-config="true" authentication-manager-ref="authManager" use-expressions="true">

		<intercept-url pattern="/coordinator/**" access="hasRole('ROLE_ADMIN')" />
		<intercept-url pattern="/student/**" access="hasRole('ROLE_USER')" />
		<intercept-url pattern="/supervisor/**" access="hasRole('ROLE_SUPERVISOR')" />

		<!-- access denied page -->
		<access-denied-handler error-page="/access_denied" />

		<!-- login-processing-url="/j_spring_security_check" -->
		<form-login 
			login-page="/login" 
			login-processing-url="/login"
			authentication-success-handler-ref="authSuccessHandler"
			always-use-default-target="true"
			authentication-failure-url="/login?error" 
			username-parameter="username"
			password-parameter="password" />
		<logout logout-url="/logout" logout-success-url="/login?logout=true" />
		<!-- enable csrf protection -->
		<csrf />
	</http>

	<!-- Select users and user_roles from database -->
	<authentication-manager id="authManager">
		<authentication-provider>
			<jdbc-user-service data-source-ref="dataSource"
				users-by-username-query="
		  select username, password, enabled from users where username=?;"
				authorities-by-username-query="
		  select username, role from user_roles where username =?;" />
		</authentication-provider>
	</authentication-manager> 
